<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FormularioAmigoActivity"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/activity_main_formulario_amigo_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="textCapWords"
        android:hint="Nome do amigo">
    </EditText>

    <EditText
        android:id="@+id/activity_main_formulario_amigo_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="phone"
        android:hint="Telefone">
    </EditText>
    <EditText
        android:id="@+id/activity_main_formulario_amigo_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="textEmailAddress"
        android:hint="Email">
    </EditText>

    <Button
        android:id="@+id/activity_main_formulario_botao_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"

        android:text="Salvar">

    </Button>


</LinearLayout>